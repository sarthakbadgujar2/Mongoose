<%- include('partials/header.ejs'); %>
    
    <h1>Hall Of Heroes</h1>
    <a href="/">Go Back</a><br>
    <a href="/create-hero">Create A New Hero</a><br>
    <a href="/squads">View Super Squads</a>
    
    
    <div class="heroes-list">
        <% for(let i = 0; i < heroes.length; i++) { %>
            
            <div class="hero">
                <div class="d-flex jc-sb flex-align">
                    <h2>Name: <%= heroes[i].name %></h2>
                    
                    <% if(heroes[i].squad) { %>
                        <h4><%= heroes[i].squad %></h4>
                    <% } %>
                </div>
                <h3>Origin: <%= heroes[i].origin %></h3>
                <p><%= heroes[i].description %></p>
                
                <ul>
                    <li>S: <%= heroes[i].stats.strength %></li>
                    <li>P: <%= heroes[i].stats.perception %></li>
                    <li>E: <%= heroes[i].stats.endurance %></li>
                    <li>C: <%= heroes[i].stats.charisma %></li>
                    <li>I: <%= heroes[i].stats.intelligence %></li>
                    <li>A: <%= heroes[i].stats.agility %></li>
                    <li>L: <%= heroes[i].stats.luck %></li>
                </ul>
                
                <h3>Overall: <%= heroes[i].overall %> </h3>
                
                <form>
                    <input type="submit" class="link" value="Update" formaction="/update-hero/<%= heroes[i]._id %>" formmethod="get">
                    <input type="submit" class="link" value="Delete" formaction="/delete-hero/<%= heroes[i]._id %>" formmethod="post">
                </form>
            </div>
            
        <% } %>
    </div>
    
    
    
    
<%- include('partials/footer.ejs'); %>